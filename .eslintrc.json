{
  "env": {
    "node": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:jest/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier", "jest"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn"
  }
}
